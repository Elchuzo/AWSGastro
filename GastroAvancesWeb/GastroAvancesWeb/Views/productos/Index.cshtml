@model IEnumerable<GastroAvancesWeb.Models.producto>

@{
    ViewData["Title"] = "Productos";
    Layout = "~/Views/Shared/_Layout_admin.cshtml";
}

<h1>Productos</h1>

<p>
    <a asp-action="Create">Nuevo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.precio_unitario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.cantidad)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.precio_unitario)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.cantidad)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.id_producto">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.id_producto">Detalles</a> |
                <a asp-action="Delete" asp-route-id="@item.id_producto">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
